<?xml version="1.0" encoding="utf-8"?>
<!-- Reference: http://en.wikipedia.org/wiki/List_of_typefaces_included_with_OS_X -->
<VirtualFont>
    <!-- Undefined -->
    <Set>
        <Ref uri="file:///Library/Fonts/Georgia.ttf" />
    </Set>
    <!-- Arabic -->
    <Set lang="ar">
        <Group>
            <Ref uri="file:///Library/Fonts/AdobeNaskh-Medium.otf" scale="1.25" />
            <Ref uri="assets://amiri-regular.ttf" scale="1.0" /> <!-- FOR OSX 10.7 AND OSX 10.10 -->
        </Group>
    </Set>
    <!-- Chinese (Traditional) -->
    <Set lang="zh-hk:zh-mo:zh-tw">
        <Group>
            <Ref uri="file:///Library/Fonts/AdobeSongStd-Light.otf" />
            <Ref uri="assets://cwTeXFangSong-zhonly.ttf" scale="1.125" /> <!-- FOR OSX 10.10 -->
        </Group>
    </Set>
    <!-- Greek (Monotonic) -->
    <Set lang="el">
        <Ref uri="file:///Library/Fonts/Georgia.ttf" />
    </Set>
    <!-- Hebrew -->
    <Set lang="he">
        <Group>
            <Ref uri="file:///Library/Fonts/AdobeHebrew-Regular.otf" scale="1.25" />
            <Ref uri="assets://FrankRuehlCLM-Medium.ttf" scale="1.17" /> <!-- FOR OSX 10.10 -->
        </Group>
    </Set>
    <!-- Hindi -->
    <Set lang="hi">
        <Group>
            <Ref uri="file:///Library/Fonts/AdobeDevanagari-Regular.otf" scale="1.2" />
            <Ref uri="file:///Library/Fonts/DevanagariMT.ttc" scale="0.85" /> <!-- FOR OSX 10.10 -->
            <Ref uri="file:///Library/Fonts/DevanagariMT.ttf" scale="0.85" /> <!-- FOR OSX 10.7 -->
        </Group>
    </Set>
    <!-- Japanese -->
    <Set lang="ja">
        <Ref uri="file:///System/Library/Fonts/ヒラギノ明朝 ProN W3.otf" scale="0.9" />
    </Set>
    <!-- Korean -->
    <Set lang="ko">
        <Group>
            <Ref uri="file:///Library/Fonts/AdobeMyungjoStd-Medium.otf" scale="0.85" />
            <Ref uri="assets://JejuMyeongjo-Regular.ttf" scale="1.0" /> <!-- FOR OSX 10.10 -->
        </Group>
    </Set>
    <!-- Russian -->
    <Set lang="ru">
        <Ref uri="file:///Library/Fonts/Georgia.ttf" />
    </Set>
</VirtualFont>
